// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}



model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// auth...
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile       Profile?
  datePlans     DatePlan[]
  conversations Conversation[]
  dates         Date[]

  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

// User profile with preferences
model Profile {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Personal info
  age       Int?
  location  String?
  gender    String?

  // Dating preferences
  interests String?  // Hobbies, activities they enjoy
  datingGoals String? // What they're looking for (casual, serious, friends, etc.)
  datingStyle String? // Their approach to dating

  // Budget & preferences
  budget    String?  // "low", "medium", "high"
  outdoor   Boolean?
  social    Boolean?

  // Dietary & lifestyle
  dietaryRestrictions String?

  // Additional context for AI
  additionalNotes String? // Free-form text for any extra context

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Date plan history
model DatePlan {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Date plan details
  title     String
  query     String   // Original user question
  response  String   // AI-generated response

  // Metadata
  favorite  Boolean  @default(false)
  completed Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}

// Chat conversation history
model Conversation {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  title    String   @default("New Conversation")
  messages Message[]

  // Link to date (optional)
  dateId String?
  date   Date?   @relation(fields: [dateId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
  @@index([dateId])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  role    String // "user" | "assistant"
  content String

  createdAt DateTime @default(now())

  @@index([conversationId])
  @@index([createdAt])
}

model Date {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name String // User-provided name for the date

  // Rating and feedback
  rating Int? // 1-5 stars, null if not rated yet
  notes  String? // Optional notes about how the date went

  // One-to-many relationship with conversations
  conversations Conversation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}
